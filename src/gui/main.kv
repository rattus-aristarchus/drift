<View>
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: [0, 0.1, 0, 1]
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(25)

        Button:
            text: "шаг назад"
            on_release: root.controller.backwards()
            size_hint: None, None
            size: dp(200), dp(25)

        Button:
            text: "шаг вперед"
            on_release: root.controller.forwards()
            size_hint: None, None
            size: dp(200), dp(25)

        Button:
            text: "пауза"
            on_release: root.controller.stop = not root.controller.stop
            size_hint: None, None
            size: dp(200), dp(25)

    GridLayout:
        id: grid
        rows: root.cells_x
        cols: root.cells_y
        spacing: 2, 2
        size_hint: 1, 1

<CellView>
    size_hint: None, None
    size: dp(50), dp(50)
    outline_width: 3
    outline_color: [0, 0, 0, 0]

    canvas.before:
        Color:
            rgba: self.background
        Rectangle:
            pos: self.pos
            size: self.size

<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

<FloatGrid>
    FloatLayout:
        id: grid
        size_hint: None, None
        size: dp(200), dp(200)

        canvas.before:
            Color:
                rgba: [0, 1, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size