<View>
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: [0, 0.1, 0, 1]
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(25)

        canvas.before:
            Color:
                rgba: [0, 0.15, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            id: filter_selector
            text: "слой карты"
            size_hint: None, None
            size: dp(200), dp(25)

        Button:
            text: "шаг назад"
            on_release: root.controller.backwards()
            size_hint: None, None
            size: dp(200), dp(25)

        Button:
            text: "шаг вперед"
            on_release: root.controller.forwards()
            size_hint: None, None
            size: dp(200), dp(25)

        Button:
            text: "пауза"
            on_release: root.controller.stop = not root.controller.stop
            size_hint: None, None
            size: dp(200), dp(25)

    BoxLayout:
        orientation: 'horizontal'

        Map:
            id: grid
            rows: root.cells_y
            cols: root.cells_x

        CellDisplay:
            id: cell_display
            size_hint_x: None
            width: dp(300)

            canvas.before:
                Color:
                    rgba: [0, 0.15, 0, 1]
                Rectangle:
                    pos: self.pos
                    size: self.size

<Map>
    size_hint: 1, 1

    canvas.before:
        Rectangle:
            pos: (self.x, self.top - self.background_height)
            size: (self.background_width, self.background_height)
            source: self.background_name

<CellView>
    size_hint: None, None
    size: dp(40), dp(40)
    outline_width: 0
    halign: "left"
    valign: "bottom"
    text_size: self.size
    font_size: "12sp"
    color: "black"

    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.25
        Line:
            width: 1
            rectangle: self.x, self.y, self.width-1, self.height-1

    Image:
        pos: (self.parent.x - 40, self.parent.y - 16)
        source: self.parent.icon_source

<Tooltip>:
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

<FloatGrid>
    FloatLayout:
        id: grid
        size_hint: None, None
        size: dp(200), dp(200)

        canvas.before:
            Color:
                rgba: [0, 1, 0, 1]
            Rectangle:
                pos: self.pos
                size: self.size