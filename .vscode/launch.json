{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug drift",
            "type": "python",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug drift (legacy)",
            "type": "python",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/.venv/bin/python",
            "debugAdapter": "legacy"
        },        
        {
            "name": "Debug pytest - All tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests",
                "-v",
                "--tb=long"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug pytest - Current file",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v",
                "--tb=long"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug pytest - Specific test file",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/logic/effects/test_structure_effects.py",
                "-v",
                "--tb=long"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug pytest - With coverage",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--cov=src",
                "--cov-report=html",
                "tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
} 